{
  "name": "waiter",
  "version": "1.0.0",
  "private": "true",
  "scripts": {
    "check": "tsc --noEmit",
    "dev": "bun run --watch src/main.ts",
    "start": "bun run src/main.ts",
    "db:push": "drizzle-kit push:sqlite",
    "db:migration:generate": "drizzle-kit generate:sqlite",
    "db:migration:apply": "bun run src/instance/database/migrate.ts",
    "db:studio": "drizzle-kit studio"
  },
  "paths": {
    "~/*": ["./src/*"]
  },
  "dependencies": {
    "@auth/core": "^0.28.1",
    "@auth/drizzle-adapter": "^0.8.1",
    "@elysiajs/swagger": "^1.0.3",
    "@t3-oss/env-core": "^0.9.2",
    "drizzle-orm": "^0.30.4",
    "elysia": "^1.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@elysiajs/eden": "^1.0.7",
    "better-sqlite3": "^9.4.3",
    "bun-types": "latest",
    "drizzle-kit": "^0.20.14"
  },
  "module": "src/main.js"
}